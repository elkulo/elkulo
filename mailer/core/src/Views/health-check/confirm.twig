{% apply spaceless %}
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex,nofollow" />
    <title>{{__SITE_TITLE}} - HEALTH CHECK{% if SectionTitle %} {{ SectionTitle }}{% endif %}</title>
    <style>{% include '/assets/bootstrap.min.css.twig' %}</style>
    <script>{% include '/assets/bootstrap.min.js.twig' %}</script>
    <script>{% include '/assets/passcode.min.js.twig' %}</script>
  </head>
  <body class="bg-light">
    {% include '/utils/flash-message.twig' %}

    <div class="container-fluid mt-5 mb-3">
      <div class="row">
        <div class="col">
          <h1 class="h5 text-center fw-lighter">HEALTH CHECK</h1>
        </div>
      </div>
    </div>

    <div class="container mb-5" style="max-width: 768px">
      <div class="row justify-content-center mb-4">
        <div class="col-8">
          <div class="position-relative m-4">
            <div class="progress" style="height: 1px">
              <div class="progress-bar" role="progressbar" style="width: calc(100% - 1.25rem)" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary shadow-none rounded-pill fw-lighter pe-none" style="width: 2rem; height: 2rem">1</button>
            <button type="button" class="position-absolute top-0 start-50 translate-middle btn btn-sm btn-primary shadow-none rounded-pill fw-lighter pe-none" style="width: 2rem; height: 2rem">2</button>
            <button type="button" class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-secondary shadow-none rounded-pill fw-lighter pe-none" style="width: 2rem; height: 2rem">3</button>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-header text-center">{{ SectionTitle }}</div>
            <div class="card-body py-sm-4 px-sm-5">
              <p class="card-text">{{ SectionDescription }}</p>
              <form action="{{ Action.url }}" method="POST">
                <div class="row g-2 align-items-center">
                  <div class="col-12 col-sm-3">
                    <label for="inputPasscode" class="col-form-label d-block text-sm-end text-secondary" style="font-size:0.875rem">6桁のコード</label>
                  </div>
                  <div class="col-2 col-sm-1">
                    <input type="text" name="passcode-1" id="inputPasscode1" class="form-control text-center px-0 passcode" placeholder="-" maxlength="1" inputmode="numeric" pattern="\d*" />
                  </div>
                  <div class="col-2 col-sm-1">
                    <input type="text" name="passcode-2" id="inputPasscode2" class="form-control text-center px-0 passcode" placeholder="-" maxlength="1" inputmode="numeric" pattern="\d*" />
                  </div>
                  <div class="col-2 col-sm-1">
                    <input type="text" name="passcode-3" id="inputPasscode3" class="form-control text-center px-0 passcode" placeholder="-" maxlength="1" inputmode="numeric" pattern="\d*" />
                  </div>
                  <div class="col-2 col-sm-1">
                    <input type="text" name="passcode-4" id="inputPasscode4" class="form-control text-center px-0 passcode" placeholder="-" maxlength="1" inputmode="numeric" pattern="\d*" />
                  </div>
                  <div class="col-2 col-sm-1">
                    <input type="text" name="passcode-5" id="inputPasscode5" class="form-control text-center px-0 passcode" placeholder="-" maxlength="1" inputmode="numeric" pattern="\d*" />
                  </div>
                  <div class="col-2 col-sm-1">
                    <input type="text" name="passcode-6" id="inputPasscode6" class="form-control text-center px-0 passcode" placeholder="-" maxlength="1" inputmode="numeric" pattern="\d*" />
                  </div>
                  <div class="col-auto col-sm-2">
                    <button type="submit" id="inputPasscodeSubmit" class="btn btn-primary">検証</button>
                  </div>
                </div>
                <div style="display:none">
                  <input type="hidden" name="{{ Guard.keys.name }}" value="{{ Guard.name }}">
                  <input type="hidden" name="{{ Guard.keys.value }}" value="{{ Guard.value }}">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  {% include '/utils/svg-icon.twig' %}
  </body>
</html>
{% endapply %}
